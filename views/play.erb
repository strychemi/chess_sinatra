<html>
  <head>
    <title>Chess</title>
    <style>
      .center {
        text-align: center;
      }
    </style>
    <link rel = "stylesheet" type = "text/css" href = "style.css">
  </head>
  <body>
    <table id="chess_board" cellpadding="0" cellspacing="0">
      <% (7).downto(0).each do |row| %>
      	<tr>
          <% (0..7).each do |col| %>
      		  <td>
              <% if !board[[row, col]].nil? %>
                <a href="#"><%= board[[row, col]].unicode %></a>
              <% else %>
                <a href="#"></a>
              <% end %>
              </a>
            </td>
          <% end %>
      	</tr>
      <% end %>
    </table>
  </body>
</html>
